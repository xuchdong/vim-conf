"vimrc for xushuntao

filetype on
filetype plugin on
filetype indent on

syntax on

set nu

set showmatch
set matchtime=5
set incsearch
set hlsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4
"将tab转化为空格
set expandtab

set scrolloff=3
set cursorline

let Tlist_Exit_OnlyWindow=1
let Tlist_Use_Right_Window=1

let g:pydiction_location='~/.vim/tools/pydiction/complete-dict'

set t_Co=256
"colorscheme pychimp
colorscheme desert

inoremap ( ()<ESC>i
inoremap [ []<ESC>i
inoremap { {}<ESC>i
inoremap < <><ESC>i
inoremap " ""<ESC>i
inoremap ' ''<ESC>i
